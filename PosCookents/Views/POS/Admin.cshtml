@model List<PosCookents.Models.BoughtItemAdmin>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var a = 0;
}
<div class="container jumbotron text-center">
    <h2>Admin</h2>
    <h2>New Order Items</h2>
    <table class="table-bordered text-center" align="center">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Item Price</th>
                <th>Quentity</th>
                <th>Total Price</th>
            </tr>
        </thead>
        @foreach (var boughtItems in Model)
        {
            <tr>
                <td>@boughtItems.Item.Name</td>
                <td>@boughtItems.Item.Price</td>
                <td>@boughtItems.Quantity</td>
                <td>@(boughtItems.Quantity * boughtItems.Item.Price)</td>
            </tr>
            a += (@boughtItems.Quantity * @boughtItems.Item.Price);
        }
    </table>

        <div>
            <h4>Grand Total: @a BDT</h4>
        </div>
        <div>
            @using (Html.BeginForm("ClearCartConfirm", "POS"))
            {
                <button type="submit" class="btn btn-primary">Confirm</button>
            }
        </div>

        @using (Html.BeginForm("AddNewItem", "POS"))
        {
            <button type="submit" class="btn btn-primary">Add New item</button>
        }

        @using (Html.BeginForm("IncreaseStock", "POS"))
        {
            <button type="submit" class="btn btn-primary">Increase Stock to an Existing Item</button>
        }

        @using (Html.BeginForm("UserType", "POS"))
        {
            <button type="submit" class="btn btn-primary">Go Back to Home</button>
        }
</div>