@model List<PosCookents.Models.Stock>
@{
    ViewBag.Title = "ShowStocks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container jumbotron text-center">
    <h2>Available Products</h2>
    <table class="table-bordered table-responsive" align="center">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quentity</th>
            </tr>
        </thead>

        @foreach (var stock in Model)
        {
            <tr>
                <td>@stock.Item.Name</td>
                <td>@stock.Quantity</td>
            </tr>
        }
    </table>
    @using (Html.BeginForm("IncreaseStock", "POS"))
    {
        <button type="submit" class="btn btn-primary">Add Again Into the Stock</button>
    }

    @using (Html.BeginForm("Admin", "POS"))
    {
        <button type="submit" class="btn btn-primary">Go Back To Admin's Option</button>
    }
</div>